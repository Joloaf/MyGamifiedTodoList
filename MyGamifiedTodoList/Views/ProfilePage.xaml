<ContentPage
    x:Class="MyGamifiedTodoList.Views.ProfilePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Profile">

    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Total Experience Points:" FontAttributes="Bold" />
        <Label Text="{Binding TotalExperiencePoints}" FontSize="Large" TextColor="Green" />
        <Label Text="Completed Tasks:" FontAttributes="Bold" />
        <Label Text="{Binding CompletedTasksCount}" FontSize="Large" TextColor="Blue" />
        <Label Text="{Binding RandomQuote}" FontSize="Medium" TextColor="Gray" 
       HorizontalOptions="Center" Margin="0,20,0,0" />
    </VerticalStackLayout>
</ContentPage>